{
  "locale": "es",
  "name": "hojaRuta",
  "elements": [
    {
      "type": "text",
      "name": "titulo",
      "isRequired": true,
      "title": "Título del compromiso"
    },
    {
      "type": "multipletext",
      "name": "fechas",
      "title": "Fechas",
      "items": [
        {
          "name": "fechaInicio",
          "inputType": "date",
          "title": "Fecha de inicio"
        },
        {
          "name": "fechaConclusion",
          "inputType": "date",
          "title": "Fecha de conclusión"
        }
      ]
    },
    {
      "type": "paneldynamic",
      "name": "responsables",
      "title": "Responsables",
      "templateElements": [
        {
          "type": "text",
          "name": "responsableNombre",
          "title": "Nombre"
        },
        {
          "type": "text",
          "name": "responsableCargo",
          "title": "Cargo"
        },
        {
          "type": "dropdown",
          "name": "responsableInstitucion",
          "title": "Institución",
          "startWithNewLine": false,
          "choices": ["item1", "item2", "item3"]
        },
        {
          "type": "text",
          "name": "responsableCorreo",
          "title": "Correo electrónico",
          "inputType": "email"
        },
        {
          "type": "text",
          "name": "responsableTelefono",
          "startWithNewLine": false,
          "title": "Teléfono",
          "inputType": "tel"
        }
      ],
      "panelCount": 1,
      "minPanelCount": 1,
      "panelAddText": "Añadir responsable"
    },
    {
      "type": "panel",
      "name": "compromiso",
      "elements": [
        {
          "type": "comment",
          "name": "descripcion",
          "title": "¿Cuál es el compromiso?"
        },
        {
          "type": "comment",
          "name": "problematica",
          "title": "¿Cuál es la problemática que el compromiso aborda?"
        },
        {
          "type": "comment",
          "name": "problematica_contribucion",
          "title": " ¿Cómo contribuirá a resolver la problemática?"
        },
        {
          "type": "comment",
          "name": "valores",
          "title": " ¿Por qué es relevante para los valores de OGP?"
        }
      ],
      "title": "Descripción del compromiso"
    },
    {
      "type": "matrixdynamic",
      "name": "otros_actores",
      "title": "Otros actores involucrados",
      "description": "(OSC, sector privado, agencias multilaterales, grupos de trabajo)",
      "columns": [
        {
          "name": "actor",
          "title": "Actor"
        }
      ],
      "cellType": "text",
      "addRowText": "Añadir actor"
    },
    {
      "type": "paneldynamic",
      "name": "hitos",
      "title": "Hitos",
      "templateElements": [
        {
          "type": "multipletext",
          "name": "hito",
          "title": "Hito",
          "items": [
            {
              "name": "descripcion",
              "title": "Descripción"
            },
            {
              "name": "indicador",
              "title": "Indicador"
            }
          ]
        }
      ]
    }
  ]
}
